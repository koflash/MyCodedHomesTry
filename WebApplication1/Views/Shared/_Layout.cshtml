<!DOCTYPE html>
@if (ViewBag.Includemanifest != null)
{
    <text>
        <html lang="en" manifest="/homes/manifest">
    </html></text>
}
else
{
    <text>
        <html lang="en">
    </text>
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)

    <script>
        window.onerror = function (errorText, url, lineNumber) {
            debugger;

            var msg = 'errorText' + errorText + '&url='
            + url + '&lineNumber=' + lineNumber;

            var xhr = new XMLHttpRequest();
            xhr.open('POST', '/api/error', true);
            xhr.setRequestHeader("Content-type",
                "application/x-www-form-urlencoded");
            xhr.send(msg);
        };

        foo();
    </script>
</head>
<body class="container">
    <header>
        <div class="row">
            <div class="col-md-push-6"><a href="/"><img alt="CodedHomes"
                 title="CodedHomes" src="~/img/coded-homes-logo.png" /></a>
            </div>
            <div class="col-md-push-6">
                <div class="pull-right online standout">
                    @if (ViewBag.IncludeManifest != null)
                    {
                        @Html.ActionLink("Manage Account",
                       "manage", "account")
                    }
                    else
                    {
                        @Html.Partial("_LoginPartial")
                    }
                </div>
            </div>
        </div>
    </header>


